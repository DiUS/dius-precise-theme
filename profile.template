<!doctype html>
<html>
  <head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, minimal-ui">

  <title>{{profile.name}}</title>

  <link href="https:///maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

  <style type="text/css">
    {{{css}}}
  </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <header>
          <div class="row">
            <div class="col-md-offset-2 col-md-8">
              <div class="big">{{profile.name}}</div>
          </div>
          <div class="row">
            <div class="col-md-offset-2 col-md-8">
              <p class="biggish">{{profile.title}}</p>
            </div>
          </div>
          <div class="row">
            <section class="passion">
              <div class="col-md-offset-2 col-md-8">
                <p class="well well-sm">{{profile.passion}}</p>
              </div>
            </section>
          </div>
        </header>
      </div>
      <div class="row">
        <div class="col-md-offset-2 col-md-3">
          <div class="hero-image">
            <div class="fileUpload" style="position: relative; width: 100%; height: 100%;">
              <div class="fileUploadImage"><img width="300" height="300" src="{{profile.photo_url}}"></div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="hero-text">
            <p>{{profile.bio}}</p>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-offset-2 col-md-9">
          <section class="skills">
            <ul class="list-inline well well-sm">
              {{#each profile.skills}}
              <li>{{this.name}}</li>
              {{/each}}
            </ul>
          </section>
        </div>
      </div>

      <div class="row">
        <div class="col-md-offset-2 col-md-9">
          <hr>
        </div>
      </div>

      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <section class="experiences ng-scope">
            <h3>
              Selected experience
            </h3>

            {{#each profile.experiences}}
            <div class="row">
              <div class="col-md-offset-1 col-md-10">
                <h4><p>{{this.place}}</p></h4>
                <h5>{{this.subtitle}}</h5>
                <span><p>{{this.description}}</p></span>
              </div>
            </div>
            <hr class="divider">
            {{/each}}
          </section>
        </div>
      </div>

      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <section class="experiences ng-scope">
            <h3>
              Education and Training
            </h3>

            {{#each profile.educations}}
            <div class="row">
              <div class="col-md-offset-1 col-md-10">
                <h4><p>{{this.year}}</p></h4>
                <h5>{{this.description}}</h5>
              </div>
            </div>
            <hr class="divider">
            {{/each}}
          </section>
        </div>
      </div>
    </div>
  </body>
</html>
